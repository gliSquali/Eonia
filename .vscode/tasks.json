{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"command": "c++",
			"type": "process",
			"problemMatcher": ["$gcc"],
			"presentation": {
				"reveal": "always"
			},
			"group": "build",
			"windows": {
				"args": [
					"-o",
					"${workspaceFolder}/bin/main.exe",
					"-I",
					"${workspaceFolder}/include",
					"-Wall",
					"-Wextra",
					"-std=c++17",
					"${workspaceFolder}/src/main.cpp",
					"${workspaceFolder}/src/chain.cpp",
					"${workspaceFolder}/src/block.cpp",
					"${workspaceFolder}/src/header.cpp",
					"${workspaceFolder}/src/SHA256.cpp"
				]
			}
		}
	]
}
